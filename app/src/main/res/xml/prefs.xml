<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory
        android:title="@string/preference_notification_category">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="checkBoxVibrate"
            android:title="@string/checkbox_vibrate"/>
        <RingtonePreference
            android:showDefault="false"
            android:key="NotificationSound"
            android:title="@string/checkbox_sound"
            android:defaultValue="content://settings/system/notification_sound"
            android:ringtoneType="all" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="checkBoxLED"
            android:title="@string/checkbox_LED"/>
        <CheckBoxPreference
            android:key="checkBoxOngoing"
            android:title="@string/checkbox_ongoing"
            android:summary="@string/ongoing_detail"/>
        <CheckBoxPreference
            android:key="checkBoxMarkAsDone"
            android:title="@string/mark_as_done"
            android:summary="@string/mark_as_done_detail"/>
        <CheckBoxPreference
            android:key="checkBoxSnooze"
            android:title="@string/snooze"
            android:summary="@string/snooze_detail"/>
        <CheckBoxPreference
            android:key="checkBoxNagging"
            android:title="@string/nagging_reminder"
            android:summary="@string/nagging_detail"/>
        <com.bleyl.recurrence.dialogs.PreferenceNagTimePicker
            android:key="nagInterval"
            android:title="@string/nagging_interval"/>
        <CheckBoxPreference
          android:key="checkBoxSyncCalendars"
          android:title="@string/calendar_sync_checkbox"/>
        <ListPreference
          android:key="listSyncCalendar"
          android:defaultValue="@string/default_calendar_value"
          android:title="@string/calendar_list_title"
          android:dialogTitle="@string/calendar_list_summary"
          android:summary="@string/calendar_list_summary"
          android:entries="@array/defaultCalendarList"
          android:entryValues="@array/defaultCalendarValuesList" />
    </PreferenceCategory>
</PreferenceScreen>